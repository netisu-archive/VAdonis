{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "resources/js/Pages",
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": ".",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],
      "@/*": [
	"./resources/js/*"
      ],
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@japa/preset-adonis/build/adonis-typings",
      "@eidellev/inertia-adonisjs"
    ]
  }
}
